{
  "compilerOptions": {
    "baseUrl": ".",
    "module": "esnext",
    "moduleResolution": "node",
    "resolveJsonModule": true,
    "isolatedModules": true,
    "noEmit": true,
    "jsx": "react-jsx",
    "rootDir": ".",
    "outDir": "dist",
    "allowSyntheticDefaultImports": true,
    "sourceMap": true,
    "types": ["cypress", "node"]
  },
  "include": ["web/src", "**/*.ts"],
  "exclude": ["node_modules"]
}
